---
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, 
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{entry.data.title} | Technical Blog</title>
    <meta name="description" content={entry.data.description} />
    <style>
      body {
        font-family: system-ui, sans-serif;
        line-height: 1.7;
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        background: #0d1117;
        color: #e6edf3;
      }
      
      .back-link {
        display: inline-block;
        margin-bottom: 2rem;
        color: #58a6ff;
        text-decoration: none;
        font-size: 0.9rem;
      }
      
      .back-link:hover {
        text-decoration: underline;
      }
      
      .post-header {
        margin-bottom: 3rem;
        border-bottom: 1px solid #30363d;
        padding-bottom: 2rem;
      }
      
      .post-title {
        font-size: 2.5rem;
        color: #f0f6fc;
        margin-bottom: 1rem;
        line-height: 1.2;
      }
      
      .post-meta {
        color: #7d8590;
        font-size: 1rem;
        margin-bottom: 1rem;
      }
      
      .post-description {
        font-size: 1.1rem;
        color: #c9d1d9;
        font-style: italic;
        margin: 0;
      }
      
      .post-content {
        font-size: 1.1rem;
        line-height: 1.8;
      }
      
      .post-content h1,
      .post-content h2,
      .post-content h3,
      .post-content h4,
      .post-content h5,
      .post-content h6 {
        color: #f0f6fc;
        margin-top: 2rem;
        margin-bottom: 1rem;
        line-height: 1.3;
      }
      
      .post-content h1 {
        font-size: 2rem;
        border-bottom: 2px solid #30363d;
        padding-bottom: 0.5rem;
      }
      
      .post-content h2 {
        font-size: 1.6rem;
      }
      
      .post-content h3 {
        font-size: 1.3rem;
      }
      
      .post-content p {
        margin-bottom: 1.5rem;
      }
      
      .post-content ul,
      .post-content ol {
        margin-bottom: 1.5rem;
        padding-left: 2rem;
      }
      
      .post-content li {
        margin-bottom: 0.5rem;
      }
      
      .post-content pre {
        background: #161b22;
        border: 1px solid #30363d;
        border-radius: 6px;
        padding: 1rem;
        overflow-x: auto;
        margin: 1.5rem 0;
        font-size: 0.9rem;
      }
      
      .post-content code {
        background: #161b22;
        color: #e6edf3;
        padding: 0.2rem 0.4rem;
        border-radius: 3px;
        font-size: 0.9em;
        border: 1px solid #30363d;
      }
      
      .post-content pre code {
        background: none;
        padding: 0;
        border: none;
      }
      
      .post-content blockquote {
        border-left: 4px solid #58a6ff;
        margin: 1.5rem 0;
        padding: 0.5rem 0 0.5rem 1.5rem;
        background: #161b22;
        font-style: italic;
        color: #c9d1d9;
      }
      
      .post-content iframe {
        max-width: 100%;
        height: auto;
        aspect-ratio: 16 / 9;
        border-radius: 8px;
        margin: 2rem 0;
      }
      
      .post-content img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 1.5rem 0;
      }
      
      .post-content a {
        color: #58a6ff;
        text-decoration: none;
      }
      
      .post-content a:hover {
        text-decoration: underline;
      }
      
      @media (max-width: 600px) {
        body {
          padding: 1rem;
        }
        
        .post-title {
          font-size: 2rem;
        }
        
        .post-content h1 {
          font-size: 1.6rem;
        }
        
        .post-content h2 {
          font-size: 1.4rem;
        }
        
        .post-content h3 {
          font-size: 1.2rem;
        }
        
        .post-content {
          font-size: 1rem;
        }
      }
    </style>
  </head>
  <body>
    <nav>
      <a href="/astroblog/" class="back-link">← Back to Blog</a>
    </nav>
    
    <article>
      <header class="post-header">
        <h1 class="post-title">{entry.data.title}</h1>
        <div class="post-meta">
          Published on {new Date(entry.data.pubDate).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
          {entry.data.updatedDate && (
            <span> • Updated on {new Date(entry.data.updatedDate).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}</span>
          )}
        </div>
        <p class="post-description">{entry.data.description}</p>
      </header>
      
      <div class="post-content">
        <Content />
      </div>
    </article>
  </body>
</html>